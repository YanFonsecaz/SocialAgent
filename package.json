{
  "name": "socialagent",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "bun --watch src/http/server.ts",
    "build": "bun build src/http/server.ts --target bun --outdir ./dist",
    "build:front": "bun run --cwd front-end build",
    "build:all": "bun run build:front && bun run build",
    "start": "NODE_ENV=production bun dist/http/server.ts",
    "start:prod": "bun run build:all && bun run start",
    "test": "bun test"
  },
  "devDependencies": {
    "@types/bun": "^1.3.9",
    "@types/jsdom": "^27.0.0",
    "@types/mozilla-readability": "^0.2.1",
    "@types/pg": "^8.16.0",
    "drizzle-kit": "^0.31.9"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.4.1",
    "@langchain/core": "^1.1.24",
    "@langchain/langgraph": "^1.1.4",
    "@langchain/openai": "^1.2.7",
    "@mozilla/readability": "^0.6.0",
    "@types/dompurify": "^3.2.0",
    "cheerio": "^1.2.0",
    "dompurify": "^3.3.1",
    "drizzle-orm": "^0.45.1",
    "elysia": "^1.4.25",
    "jsdom": "^28.1.0",
    "marked": "^12.0.2",
    "nodemailer": "^6.9.15",
    "openai": "^6.21.0",
    "pg": "^8.18.0",
    "postgres": "^3.4.8",
    "zod": "^4.3.6"
  }
}
